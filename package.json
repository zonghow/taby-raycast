{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "version": "1.0.0",
  "name": "taby-raycast",
  "title": "Taby",
  "description": "Raycast extension for chrome extension: Taby.",
  "icon": "extension-icon.png",
  "author": "zonghao",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "gistProvider",
      "title": "Gist Provider",
      "description": "Select the Gist provider to use",
      "type": "dropdown",
      "required": true,
      "default": "github",
      "data": [
        {
          "title": "Github",
          "value": "github"
        },
        {
          "title": "Gitee",
          "value": "gitee"
        }
      ]
    },
    {
      "name": "gistId",
      "title": "Gist ID",
      "description": "Enter the Gist ID",
      "type": "textfield",
      "required": true,
      "default": ""
    },
    {
      "name": "accessToken",
      "title": "Access Token",
      "description": "Enter the Access Token",
      "type": "textfield",
      "required": true,
      "default": ""
    }
  ],
  "commands": [
    {
      "name": "taby",
      "title": "Taby Quick Actions",
      "subtitle": "Taby",
      "description": "Taby quick actions",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.8",
    "@raycast/utils": "^1.17.0",
    "axios": "^1.13.2",
    "fuse.js": "^7.1.0",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "pinyin-pro": "^3.27.0",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/lodash": "^4.17.21",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
